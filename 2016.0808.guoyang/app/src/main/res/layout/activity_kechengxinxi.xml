<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="qq.app01.com.a20160808guoyang.kechengxinxi">

    <RelativeLayout
        android:contentDescription="@string/app_name"
        android:id="@+id/R1"
        android:background="@color/aa"
        android:layout_width="match_parent"
        android:layout_height="220sp">
        <ImageView
            android:id="@+id/imageview"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:onClick="finsh"
            android:contentDescription="@string/app_name"
            android:background="@drawable/fanhui"
            android:layout_width="20sp"
            android:layout_height="25sp" />
        <ImageView
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/xuanxiangka"
            android:layout_width="20sp"
            android:layout_alignParentRight="true"
            android:layout_height="25sp" />
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/Im1"
            android:layout_marginTop="30sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_width="80sp"
            android:layout_height="80sp" />
        <TextView
            android:textColor="@color/bb"
            android:layout_below="@id/Im1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title_kechen"
            android:textSize="32sp"
            android:layout_marginTop="30sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/R2"
        android:layout_below="@id/R1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview"
            android:columnWidth="90sp"
            android:numColumns="auto_fit"
            android:horizontalSpacing="10sp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10sp"
            android:gravity="center"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
